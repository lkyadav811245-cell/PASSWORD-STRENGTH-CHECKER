<script>
const password = document.getElementById("password");
const strengthFill = document.getElementById("strength-fill");
const feedback = document.getElementById("feedback");

password.addEventListener("input", () => {

    let value = password.value;
    let score = 0;

    const lengthCheck = value.length >= 8;
    const upperCheck = /[A-Z]/.test(value);
    const numberCheck = /[0-9]/.test(value);
    const specialCheck = /[^A-Za-z0-9]/.test(value);

    update("length", lengthCheck);
    update("upper", upperCheck);
    update("number", numberCheck);
    update("special", specialCheck);

    if(lengthCheck) score++;
    if(upperCheck) score++;
    if(numberCheck) score++;
    if(specialCheck) score++;

    strengthFill.style.width = (score * 25) + "%";

    if(score <= 1){
        strengthFill.style.background = "red";
        feedback.textContent = "Weak Password";
        feedback.style.color = "red";
    }
    else if(score == 2 || score == 3){
        strengthFill.style.background = "orange";
        feedback.textContent = "Medium Password";
        feedback.style.color = "orange";
    }
    else if(score == 4){
        strengthFill.style.background = "green";
        feedback.textContent = "Strong Password";
        feedback.style.color = "green";
    }
    else{
        strengthFill.style.width = "0%";
        feedback.textContent = "";
    }
});

function update(id, valid){
    const element = document.getElementById(id);
    element.classList.remove("valid","invalid");
    element.classList.add(valid ? "valid" : "invalid");
}
</script>

